package src;
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class Test {

	public static void main(String[] args) {
		Dimension defdim = new Dimension(750,500);
		JFrame frame = new JFrame("Window Title"); //sets the window title
		
		JButton button1 = new JButton("HEADING OF PROGRAM"); //random button
		button1.setPreferredSize(new Dimension(750,50));
		JButton button2 = new JButton("Footer"); //random button
		JButton button3 = new JButton("User details display"); //random button
		button3.setPreferredSize(new Dimension(100,500));
		JButton button4 = new JButton("Possible Left Menu"); //random button
		button4.setPreferredSize(new Dimension(150,500));
		
		// TODO Auto-generated method stub
		System.out.println("Ayyyy sup fam");

		WindowAdapter windowadapter = new WindowAdapter(){
			public void windowClosing(WindowEvent e) {
				System.exit(0);
			}
		};
		frame.addWindowListener(windowadapter);

		JLabel jlabel = new JLabel("Central area displaying most information", SwingConstants.CENTER);
//		jlabel.setPreferredSize(defdim); //sets preffered size of the label/text element
		
		frame.getContentPane().add(jlabel, BorderLayout.CENTER);
		frame.getContentPane().add(button1, BorderLayout.NORTH);
		frame.getContentPane().add(button2, BorderLayout.SOUTH);
		frame.getContentPane().add(button3, BorderLayout.EAST);
		frame.getContentPane().add(button4, BorderLayout.WEST);
		frame.setSize(defdim);
		frame.setVisible(true);

	}

}
